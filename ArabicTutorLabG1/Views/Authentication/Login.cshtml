@{
    Layout = null;
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Untitled Document</title>
    <link rel="stylesheet" type="text/css" href="../css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="../css/bootstrap-rtl.min.css">
    <link rel="stylesheet" type="text/css" href="../css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="../css/style.css">
    <link href="https://fonts.googleapis.com/css?family=Cairo" rel="stylesheet">
</head>
<body>
    <div class="form-container login-form">
        <a asp-controller="Authentication" asp-action="Index" class="back">
            <p>رجوع</p>
            <i class="fa fa-angle-left"></i>
        </a>
        <div class="logo">
            <img src="../images/logo.png" class="img-responsive">
        </div>
        <div class="col-xs-12">
            <label>الاسم بالكامل</label>
            <div class="input mb-3">
                <input type="text" placeholder="ادخل اسمك بالكامل">
                <img src="../images/user.png">
            </div>
        </div>
        <div class="col-xs-12">
            <label>كلمة المرور</label>
            <div class="input">
                <input type="password" placeholder="*******">
                <img src="../images/pass.png">
            </div>
        </div>
        <div class="col-xs-12">
            <input type="checkbox">
            <label class="forget">تذكرني</label>
        </div>
        <div class="col-xs-12">
            <button class="btn login"><a href="index.html">الدخول</a></button>
            <a href="reset-password.html" class="link">نسيت كلمة المرور؟</a>
        </div>
        <div class="clearfix"></div>
    </div>

    <script src="../js/jquery-3.1.1.min.js"></script>
    <script src="../js/bootstrap.min.js"></script>
</body>
</html>
